cmake_minimum_required(VERSION 2.8.3)
project(joystick_controller)

find_package(catkin REQUIRED COMPONENTS rocspp geometry_msgs joy)

include_directories(${catkin_INCLUDE_DIRS})

catkin_package(
  INCLUDE_DIRS
  CATKIN_DEPENDS roscpp geometry_msgs joy
  DEPENDS
)

add_executable(joystick_controller src/controller.cpp)
target_link_librarries(joystick_controller ${catkin_LIBRARIES})

install(
  TARGETS joystick_controller
  RUNTIME DESTINATION ${CATKIN_PACKAGE_BIN_DESTINATION}
)

install(
  DIRECTORY launch
  DESTINATION ${CATKIN_PACKAGE_SHARE_DESTINATION}
)  
